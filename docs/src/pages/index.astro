---
import HomeBentogrid from "@/components/elements/home-bentogrid";
import { HomeBlog } from "@/components/elements/home-blog";
import { HomeMarquee } from "@/components/elements/home-marquee";
import { BackgroundAnimation } from "@/components/ui/background-animation";
import { Button } from "@/components/ui/button";
import {
	Card,
	CardContent,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import { BookIcon, RocketIcon } from "lucide-react";
import config from "../../explainer.config";

const posts = await getCollection("blog", (post) => {
	if (import.meta.env.DEV) {
		return true;
	}

	return post.data.publishedAt && new Date(post.data.publishedAt) <= new Date();
});
---

<Layout>
	<div>
		<div class="relative flex items-center justify-center min-h-[60vh]">
			<BackgroundAnimation client:only />
			<div
				class="relative z-10 flex flex-col items-center justify-center gap-5 text-center max-w-xl"
			>
				<h1 class="text-7xl font-bold text-primary">FerrisKey</h1>
				<p class="text-4xl text-foreground font-bold">
					Open-Source IAM Solution
				</p>
				<p class="text-lg text-foreground font-light">
					FerrisKey is an open-source IAM (Identity and Access Management)
					solution designed for modern cloud-native environments.
				</p>

				<div class="flex flex-col md:flex-row gap-5 justify-center w-full">
					<Button>
						<a
							href={config.urls.getStarted}
							class="flex items-center gap-2 cursor-pointer"
						>
							<RocketIcon className="w-5 h-5" />
							Get started
						</a>
					</Button>
					<Button>
						<a
							href={config.urls.documentation}
							class="flex items-center gap-2 cursor-pointer"
						>
							<BookIcon className="w-5 h-5" />
							Documentation
						</a>
					</Button>
					<Button variant="outline">
						<a
							href={config.urls.github}
							target="_blank"
							class="flex items-center gap-2 cursor-pointer"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width={24}
								height={24}
								viewBox="0 0 24 24"
							>
								<path
									fill="currentColor"
									d="M12 .297c-6.63 0-12 5.373-12 12c0 5.303 3.438 9.8 8.205 11.385c.6.113.82-.258.82-.577c0-.285-.01-1.04-.015-2.04c-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729c1.205.084 1.838 1.236 1.838 1.236c1.07 1.835 2.809 1.305 3.495.998c.108-.776.417-1.305.76-1.605c-2.665-.3-5.466-1.332-5.466-5.93c0-1.31.465-2.38 1.235-3.22c-.135-.303-.54-1.523.105-3.176c0 0 1.005-.322 3.3 1.23c.96-.267 1.98-.399 3-.405c1.02.006 2.04.138 3 .405c2.28-1.552 3.285-1.23 3.285-1.23c.645 1.653.24 2.873.12 3.176c.765.84 1.23 1.91 1.23 3.22c0 4.61-2.805 5.625-5.475 5.92c.42.36.81 1.096.81 2.22c0 1.606-.015 2.896-.015 3.286c0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
								></path>
							</svg>
							View on Github
						</a>
					</Button>
				</div>
			</div>
		</div>

		<div
			class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-4 px-5 sm:px-0 py-16"
		>
			<Card>
				<CardHeader>
					<CardTitle>Latest tweets</CardTitle>
					<CardDescription>
						Lorem ipsum dolor sit amet, consectetur adipiscing elit.
					</CardDescription>
				</CardHeader>

				<CardContent>
